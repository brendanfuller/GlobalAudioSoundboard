<Window x:Class="GlobalAudioSoundboard.WaveformEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Audio Clip"
        Height="500"
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundColor}">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ItemBackgroundColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   x:Name="TitleText"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextColor}"
                   Margin="0,0,0,20"/>

        <!-- Duration Info -->
        <TextBlock Grid.Row="1"
                   x:Name="DurationText"
                   FontSize="14"
                   Foreground="{DynamicResource SecondaryTextColor}"
                   Margin="0,0,0,10"/>

        <!-- Waveform Canvas -->
        <Border Grid.Row="2"
                Background="{DynamicResource ItemBackgroundColor}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,0,0,20">
            <Grid>
                <Canvas x:Name="WaveformCanvas"
                        MouseLeftButtonDown="WaveformCanvas_MouseLeftButtonDown"
                        MouseMove="WaveformCanvas_MouseMove"
                        MouseLeftButtonUp="WaveformCanvas_MouseLeftButtonUp"
                        Background="Transparent"
                        ClipToBounds="True"/>

                <!-- Left Gray Overlay (before start) -->
                <Rectangle x:Name="LeftOverlay"
                           Fill="#80000000"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Stretch"
                           IsHitTestVisible="False"/>

                <!-- Right Gray Overlay (after end) -->
                <Rectangle x:Name="RightOverlay"
                           Fill="#80000000"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Stretch"
                           IsHitTestVisible="False"/>

                <!-- Start Time Marker -->
                <Line x:Name="StartMarker"
                      Stroke="#4CAF50"
                      StrokeThickness="2"
                      Y1="0"
                      Y2="0"
                      IsHitTestVisible="False"/>

                <!-- End Time Marker -->
                <Line x:Name="EndMarker"
                      Stroke="#F44336"
                      StrokeThickness="2"
                      Y1="0"
                      Y2="0"
                      IsHitTestVisible="False"/>

                <!-- Current Position Marker -->
                <Line x:Name="PositionMarker"
                      Stroke="#2196F3"
                      StrokeThickness="1"
                      Y1="0"
                      Y2="0"
                      Visibility="Collapsed"
                      IsHitTestVisible="False"/>
            </Grid>
        </Border>

        <!-- Time Controls -->
        <Grid Grid.Row="3" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Start Time"
                           Foreground="{DynamicResource SecondaryTextColor}"
                           FontSize="12"
                           Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="StartTimeTextBox"
                             Grid.Column="0"
                             Background="{DynamicResource SurfaceColor}"
                             Foreground="{DynamicResource TextColor}"
                             BorderBrush="{DynamicResource BorderColor}"
                             Padding="8"
                             FontSize="14"
                             TextChanged="StartTimeTextBox_TextChanged"/>
                    <Button Grid.Column="1"
                            Content="Reset"
                            Margin="5,0,0,0"
                            Padding="10,5"
                            Click="ResetStart_Click"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="End Time"
                           Foreground="{DynamicResource SecondaryTextColor}"
                           FontSize="12"
                           Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="EndTimeTextBox"
                             Grid.Column="0"
                             Background="{DynamicResource SurfaceColor}"
                             Foreground="{DynamicResource TextColor}"
                             BorderBrush="{DynamicResource BorderColor}"
                             Padding="8"
                             FontSize="14"
                             TextChanged="EndTimeTextBox_TextChanged"/>
                    <Button Grid.Column="1"
                            Content="Reset"
                            Margin="5,0,0,0"
                            Padding="10,5"
                            Click="ResetEnd_Click"/>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Playback Controls -->
        <Grid Grid.Row="4" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Volume Control -->
            <StackPanel Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Margin="0,0,20,0">
                <TextBlock Text="Preview Volume"
                           Foreground="{DynamicResource SecondaryTextColor}"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <Slider x:Name="VolumeSlider"
                        Width="150"
                        Minimum="0"
                        Maximum="1"
                        Value="1"
                        TickFrequency="0.01"
                        IsSnapToTickEnabled="False"
                        VerticalAlignment="Center"
                        IsMoveToPointEnabled="True"
                        Margin="0,0,8,0"/>
                <TextBlock x:Name="VolumePercentText"
                           Text="100%"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryTextColor}"
                           VerticalAlignment="Center"
                           Width="40"/>
            </StackPanel>

            <!-- Play/Stop Button -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="PlayStopButton"
                        Content="â–¶ Play Preview"
                        Click="PlayStop_Click"
                        Padding="20,10"
                        Background="#4CAF50">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Background" Value="#4CAF50"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45a049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Save"
                    Click="Save_Click"
                    Padding="25,10"
                    Margin="0,0,10,0"
                    Background="#4CAF50">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Cancel"
                    Click="Cancel_Click"
                    Padding="25,10"/>
        </StackPanel>
    </Grid>
</Window>
