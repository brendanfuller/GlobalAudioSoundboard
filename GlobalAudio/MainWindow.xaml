<Window x:Class="GlobalAudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:GlobalAudio.Converters"
        Title="Global Audio Soundboard" Height="600" Width="900"
        Background="{DynamicResource BackgroundColor}"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">
    <Window.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" Padding="15" CornerRadius="5" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Sound Library" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Foreground="{DynamicResource TextColor}"/>

                <!-- Audio Device Selector -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="AudioDeviceButton" Content="Select Devices..." Click="AudioDevice_Click"
                            Padding="10,5" FontSize="12" Background="#2196F3" Foreground="White"
                            BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <Button Grid.Column="3" Content="+ Add Sound" Click="AddSound_Click"
                        Padding="15,8" FontSize="14" Background="#4CAF50" Foreground="White"
                        BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45a049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Sound List -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceColor}" CornerRadius="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="SoundsListView" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource ItemBackgroundColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1"
                                    CornerRadius="5" Margin="0,0,0,10" Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" MinWidth="150"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="2*" MinWidth="150"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Name -->
                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="Name" FontSize="10" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,3"/>
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextColor}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <!-- Duration -->
                                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                        <TextBlock Text="Duration" FontSize="10" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,3"/>
                                        <TextBlock Text="{Binding DurationString}" FontSize="14" Foreground="{DynamicResource TextColor}"/>
                                    </StackPanel>

                                    <!-- Volume -->
                                    <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                        <TextBlock Text="Volume" FontSize="10" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,3"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Slider Grid.Column="0" Value="{Binding Volume, Mode=TwoWay}" Minimum="0" Maximum="1"
                                                    TickFrequency="0.01" IsSnapToTickEnabled="False"
                                                    VerticalAlignment="Center" Margin="0,0,8,0"
                                                    IsEnabled="{Binding IsPlaying, Converter={StaticResource InverseBoolConverter}}"
                                                    IsMoveToPointEnabled="True"/>
                                            <TextBlock Grid.Column="1" Text="{Binding VolumePercent}" FontSize="12"
                                                       Foreground="{DynamicResource TextColor}" VerticalAlignment="Center" Width="40"/>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Hotkey -->
                                    <StackPanel Grid.Column="3" Margin="0,0,10,0">
                                        <TextBlock Text="Global Keybind (Click to Edit)" FontSize="10" Foreground="{DynamicResource SecondaryTextColor}" Margin="0,0,0,3"/>
                                        <Border Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1"
                                                CornerRadius="3" Padding="8,5" Cursor="Hand">
                                            <TextBlock Text="{Binding Hotkey}" FontSize="12" Foreground="{DynamicResource TextColor}"
                                                       MouseLeftButtonDown="Hotkey_Click" Tag="{Binding}"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Play Button -->
                                    <Button Grid.Column="4" Content="{Binding PlayButtonText}" Click="Play_Click" Tag="{Binding}"
                                            Background="#2196F3" Foreground="White" BorderThickness="0"
                                            FontSize="16" Margin="0,0,5,0" Cursor="Hand" Height="35" Width="45"
                                            VerticalAlignment="Center">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="5">
                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                  VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#1976D2"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <!-- Delete Button -->
                                    <Button Grid.Column="5" Content="ðŸ—‘" Click="Delete_Click" Tag="{Binding}"
                                            Background="#F44336" Foreground="White" BorderThickness="0"
                                            FontSize="16" Cursor="Hand" Height="35" Width="45"
                                            VerticalAlignment="Center">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="5">
                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                  VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#D32F2F"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceColor}" Padding="15,10" CornerRadius="5" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Active Output Devices:" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextColor}" VerticalAlignment="Center" Margin="0,0,15,0"/>

                <ItemsControl Grid.Column="1" x:Name="ActiveDevicesList" HorizontalAlignment="Left">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource ItemBackgroundColor}" BorderBrush="#2196F3" BorderThickness="1"
                                    CornerRadius="3" Padding="8,4" Margin="0,0,8,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="11"
                                               Foreground="{DynamicResource TextColor}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding VolumeDisplay}" FontSize="10"
                                               Foreground="{DynamicResource SecondaryTextColor}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
    </Grid>
</Window>
