<Window x:Class="GlobalAudio.AudioDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Output Devices" Height="450" Width="500"
        Background="#F5F5F5" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Select one or more output devices:"
                   FontSize="14" Margin="0,0,0,10"/>

        <!-- Device List -->
        <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="DeviceListView">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="5" Margin="0,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Device Name with Checkbox -->
                                    <CheckBox Grid.Row="0" Content="{Binding Name}"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              FontSize="13" FontWeight="SemiBold"
                                              Checked="Device_CheckedChanged"
                                              Unchecked="Device_CheckedChanged"/>

                                    <!-- Volume Slider -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="25,5,0,5"
                                                Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="Volume:" VerticalAlignment="Center" FontSize="11" Margin="0,0,10,0"/>
                                        <Slider Value="{Binding Volume, Mode=TwoWay}" Minimum="0" Maximum="1"
                                                Width="200" VerticalAlignment="Center"
                                                TickFrequency="0.1" IsSnapToTickEnabled="False"/>
                                        <TextBlock Text="{Binding VolumePercent}" VerticalAlignment="Center"
                                                   FontSize="11" Margin="10,0,0,0" Width="40"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Click="OK_Click" Width="80" Height="30" Margin="0,0,10,0"
                    Background="#4CAF50" Foreground="White" BorderThickness="0" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Cancel" Click="Cancel_Click" Width="80" Height="30"
                    Background="#757575" Foreground="White" BorderThickness="0" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#616161"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
